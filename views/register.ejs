        <div class="right">
            <div class="form-container">
                <div class="title">
                    <h1>Welcome To DISIGN</h1>
                    <p>Register your Account</p>
                </div>
                <form action="/register" method="post">
                    <div class="form-item">
                        <label for="email" class="form-label">Email</label>
                        <input autocomplete="off" type="email" name="email" class="form-control" id="username" >
                    </div>
                    <div class="form-item">
                        <label for="username" class="form-label">Username</label>
                        <input autocomplete="off" type="text" name="username" class="form-control" id="username" >
                    </div>
                    <div class="form-item">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="form-item">
                        <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
                        <input type="password" name="confirm_password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="form-item form-button">
                        <button type="submit" class="btn-submit">Create</button>
                        <p>Have account already?<a href="/login" >Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
